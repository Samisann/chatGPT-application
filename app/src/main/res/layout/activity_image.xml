<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imageActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/imageCree"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="120px"
            android:contentDescription="image crÃ©er par l'api"
            android:scaleType="centerCrop"

            android:layout_marginBottom="800px"

            />


        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_marginTop="-400px"
            android:layout_marginBottom="450px"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />


        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez votre demande ici" />

        <Button
            android:id="@+id/buttonEnvoyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer ma demande" />





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>